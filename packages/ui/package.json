{
    "name": "@noqte/ui",
    "version": "0.9.3",
    "main": "src/index.js",
    "description": "Component library based on Tailwindcss.",
    "author": "Alireza Sarabchi <a.sarabchi@gmail.com> (https://alireza.ws)",
    "repository": "https://github.com/noqte/ui",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "ui",
        "css",
        "tailwindcss",
        "design",
        "ui-kit",
        "design-system",
        "ui-library",
        "ui-components",
        "persian",
        "farsi"
    ],
    "scripts": {
        "lint": "eslint src/**/*.js",
        "postcss": "postcss src/components/*.css --base src --dir dist",
        "prejss": "prejss-cli dist/**/*.css --format commonjs",
        "build": "pnpm run postcss && pnpm run prejss",
        "dev": "chokidar 'src/**/*.js' 'src/**/*.css' -c 'pnpm run build'"
    },
    "files": [
        "dist",
        "src/index.js",
        "src/config/*",
        "src/lib/*",
        "src/extend/*"
    ],
    "devDependencies": {
        "eslint": "^7.32.0",
        "eslint-config-custom": "workspace:0.0.0",
        "npm-watch": "^0.11.0",
        "postcss-cli": "^10.1.0",
        "postcss-hexrgba": "^2.1.0",
        "postcss-import": "^15.1.0",
        "postcss-js": "^4.0.1",
        "prejss-cli": "^0.3.3",
        "prejss-postcss-parser": "^0.3.2"
    },
    "dependencies": {
        "autoprefixer": "^10.4.13",
        "chokidar-cli": "^3.0.0",
        "postcss": "^8.4.21",
        "tailwindcss": "^3.2.6"
    }
}
